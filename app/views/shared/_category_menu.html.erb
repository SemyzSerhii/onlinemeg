<div style="width: 20%; position: fixed; z-index: 1;box-shadow: 0px 0px 1px 0px #000000;;
  margin-left: 1rem; margin-top: 1rem; font-size: 1rem; border-radius: 0.5rem">
  <div class="submenu">
    <h2 style="text-align: center"> Каталог</h2>
    <ul class="nav nav-pills nav-stacked">
      <% Category.roots.each do |category| %>
        <li class="nav-item">
          <%= link_to category.name, purchases_path(filters: { category_id: category.id }),
            class: 'dropdown-item',
            style: 'font-weight:bold; border-bottom: 1px gray solid; width:90%; margin-left: 5%',
            remote: true
          %>
          <%= render 'shared/subcategory_menu', categories: category.root.descendants.arrange %>
        </li>
        <% Tag.all.each do |tag| %>
          <%= link_to tag.name, tag %>
        <% end %>
      <% end %>
    </ul>
  </div>

</div>