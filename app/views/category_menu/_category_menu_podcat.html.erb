<ul class="nav nav-pills nav-stacked nested_nav">
  <% categories.each do |category, children| %>
    <li class="nav-item" style="width: 100%">
      <%= link_to category.name, category,
        class: "dropdown-item #{ 'active' if current_page?(category_path(category))}",
        style: 'text-align: center; border-bottom: 1px gray solid; width:70%; margin-left: 15%  '%>
      <%= render 'category_menu_podcat', categories: children if children.present?%>
    </li>
  <%end %>
</ul>
